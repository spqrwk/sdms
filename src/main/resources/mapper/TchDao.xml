<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.sdms.dao.TchDao">

    <resultMap type="com.github.sdms.entity.Tch" id="TchMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="clazzId" column="clazz_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TchMap">
        select
          id, name, clazz_id
        from sdmsdb.sdms_tch
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TchMap">
        select
          id, name, clazz_id
        from sdmsdb.sdms_tch
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TchMap">
        select
        id, name, clazz_id
        from sdmsdb.sdms_tch
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="clazzId != null">
                and clazz_id = #{clazzId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sdmsdb.sdms_tch(name, clazz_id)
        values (#{name}, #{clazzId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sdmsdb.sdms_tch(name, clazz_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.clazzId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sdmsdb.sdms_tch(name, clazz_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.clazzId})
        </foreach>
        on duplicate key update
        name = values(name) , clazz_id = values(clazz_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sdmsdb.sdms_tch
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="clazzId != null">
                clazz_id = #{clazzId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sdmsdb.sdms_tch where id = #{id}
    </delete>

</mapper>