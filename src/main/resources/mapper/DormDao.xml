        select
        id, code, monthly_rent, apt_name, tenant_limit, current_tenant
        from sdmsdb.sdms_dorm
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
