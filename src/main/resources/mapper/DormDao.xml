                and apt_name = #{aptName}
            </if>
            <if test="tenantLimit != null">
                and tenant_limit = #{tenantLimit}
            </if>
            <if test="currentTenant != null">
                and current_tenant = #{currentTenant}
            </if>
        </where>
    </select>-->

    <select id="countByLimit" resultType="java.lang.Integer">
        SELECT
            count(1)
        FROM
            sdms_dorm sd
        <where>
            <if test="dormCode != null and dormCode != ''">
                AND sd.code LIKE CONCAT('%', #{dormCode}, '%')
            </if>
            <if test="aptName != null and aptName != ''">
                AND sd.apt_name LIKE CONCAT('%', #{aptName}, '%')
            </if>
        </where>
        <if test="startIndex != null and pageSize != null">
            LIMIT #{startIndex}, #{pageSize}
        </if>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sdmsdb.sdms_dorm(code, monthly_rent, apt_name, tenant_limit, current_tenant)
        values (#{code}, #{monthlyRent}, #{aptName}, #{tenantLimit}, #{currentTenant})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sdmsdb.sdms_dorm(code, monthly_rent, apt_name, tenant_limit, current_tenant)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.code}, #{entity.monthlyRent}, #{entity.aptName}, #{entity.tenantLimit}, #{entity.currentTenant})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sdmsdb.sdms_dorm(code, monthly_rent, apt_name, tenant_limit, current_tenant)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.code}, #{entity.monthlyRent}, #{entity.aptName}, #{entity.tenantLimit}, #{entity.currentTenant})
        </foreach>
        on duplicate key update
        code = values(code) , monthly_rent = values(monthly_rent) , apt_name = values(apt_name) , tenant_limit =
        values(tenant_limit) , current_tenant = values(current_tenant)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sdmsdb.sdms_dorm
        <set>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="monthlyRent != null">
                monthly_rent = #{monthlyRent},
            </if>
            <if test="aptName != null and aptName != ''">
                apt_name = #{aptName},
            </if>
            <if test="tenantLimit != null">
                tenant_limit = #{tenantLimit},
            </if>
            <if test="currentTenant != null">
                current_tenant = #{currentTenant},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sdmsdb.sdms_dorm where id = #{id}
    </delete>

</mapper>